  <!-- Form handling -->
  <form action="/api/compromissos" method="POST" id="add_compromisso">
    <div class="new_compromisso">
       
        <div class="form-group">
            <label for="name" class="text-cinza">Tipo</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="tipo" value="" placeholder="Digite o tipo/descrição do compromisso" required>
        </div>

        <div class="form-group">
            <label for="Endereco" class="text-cinza">Endereço</label>
            <input type="text" id="EnderecoCompromisso" name="endereco" value="" placeholder="Digite o endereço" required>
        </div>

        <div class="form-group">
            <label for="Telefone" class="text-cinza">Telefone</label>
            <input id="telefone" maxlength="15" type="text" name="telefone" value="" placeholder="(99) 99999 - 9999" required>
        </div>

        <div class="form-group">
            <label for="Data_compromisso" class="text-cinza">Data</label>
            <input type="date" id="data_do_compromisso" name="data_compromisso" value="" required>
        </div>

        <div class="form-group">
            <label for="Hora_compromisso" class="text-cinza">Horário</label>
            <input type="time" name="hora_compromisso" value="" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-light update">Salvar</button>
        </div>
    
    </div>

</form>