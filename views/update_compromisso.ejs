<!--Include header-->
<%- include('include/_header')%>
<!--Include header-->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
       
        <div class="box-nav d-flex-justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Todos os compromissos</a>
           </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Editar compromisso</h2>
            <span class="text-cinza">Aqui você pode editar seus compromissos</span>
        </div>

       <!-- Form handling -->
  <form method="POST" id="update_compromisso">
    <div class="new_compromisso">
       
        <div class="form-group">
            <label for="name" class="text-cinza">Tipo</label>
            <input type="hidden" name="id" value="<%= compromisso._id %>">
            <input type="text" name="tipo" value="<%= compromisso.tipo %>" placeholder="Digite o tipo/descrição do compromisso" required>
        </div>

        <div class="form-group">
            <label for="Endereco" class="text-cinza">Endereço</label>
            <input type="text" name="endereco" id="EnderecoCompromisso" value="<%= compromisso.endereco %>" placeholder="Digite o endereço/local" required >
        </div>

        <div class="form-group">
            <label for="telefone" class="text-cinza">Telefone</label>
            <input type="text" id="telefone" maxlength="15" name="telefone" value="<%= compromisso.telefone %>" placeholder="(99) 99999 - 9999" required>
        </div>

        <div class="form-group">
            <label for="Data" class="text-cinza">Data</label>
            <input type="date" name="data_compromisso" value="<%= compromisso.data_compromisso %>" required>
        </div>

        <div class="form-group">
            <label for="Hora_compromisso" class="text-cinza">Horário</label>
            <input type="time" name="hora_compromisso" value="<%= compromisso.hora_compromisso %>" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-light update">Salvar</button>
        </div>
    
    </div>

</form>

    </div>
</main>
<!-- Main Site -->

<!--Include footer-->
<%- include('include/_footer')%>
<!--Include footer-->